<div class="card-action materialize-red lighten-2">
  <h5 class="white-text valign-wrapper"><i class="material-icons">lock_outline</i> Login</h5>
</div>
<div class="card-content">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="input-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :id => "email", :type => "email", :class => "validate" %>
    </div>

    <div class="input-field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :id => "password", :type => "password", :class => "validate" %>
    </div>

    <div class="center-align">
      <%= f.submit "Log in", :class => "materialize-red lighten-2 btn" %>
    </div>
    
  <% end %>

  <div class="center-align"><%= render "devise/shared/links" %></div>
</div>

